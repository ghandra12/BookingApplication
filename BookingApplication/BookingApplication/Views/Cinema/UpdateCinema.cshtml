@model BookingApplication.Models.Cinema
@{
    ViewData["Title"] = "UpdateCinema";
    IEnumerable<int> ids = ViewData["CinemaIds"] as IEnumerable<int>;
}

<div class="container w-50 text-center">
    <h1 class="display-4">Update Cinema</h1>
    <form style="margin-top: 13rem" asp-controller="Cinema" asp-action="UpdateCinema">

        <select class="form-control" asp-for="Id"
                asp-items="@(new SelectList(ids))">
            <option>Please select Cinema id</option>
        </select>
        <div class="form-group" style="margin-top: 2rem">
            <label for="CinemaName">New Cinema Name</label>
            <input class="form-control" type="text" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="CinemaImage">New Image Path</label>
            <input class="form-control" type="text" asp-for="ImgPath">
        </div>
        <button style="margin-top: 3rem" type="submit" class="btn btn-primary">Update</button>
    </form>
</div>