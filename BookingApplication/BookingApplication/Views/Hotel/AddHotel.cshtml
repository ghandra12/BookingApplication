@model BookingApplication.Models.Hotel
@{
    ViewData["Title"] = "AddHotel";
}

<div class="container w-50 text-center">
    <h1 class="display-4">Add Hotel</h1>
    <form style="margin-top: 8rem" asp-action="AddHotel" method="post">
        <div class="form-group">
            <label for="HotelName">Hotel Name</label>
            <input class="form-control" type="text" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="HotelImage">Image Path</label>
            <input class="form-control" type="text" asp-for="ImgPath">
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>

