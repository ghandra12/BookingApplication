@model BookingApplication.Models.Hotel
@{
    ViewData["Title"] = "UpdateHotel";
    IEnumerable<int> ids = ViewData["HotelIds"] as IEnumerable<int>;
}

<div class="container w-50 text-center">
    <h1 class="display-4">Update Hotel</h1>
    <form style="margin-top: 13rem" asp-controller="Hotel" asp-action="UpdateHotel">

        <select class="form-control" asp-for="Id"
                asp-items="@(new SelectList(ids))">
            <option>Please select Hotel id</option>
        </select>
        <div class="form-group" style="margin-top: 2rem">
            <label for="HotelName">New Hotel Name</label>
            <input class="form-control" type="text" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="HotelImage">New Image Path</label>
            <input class="form-control" type="text" asp-for="ImgPath">
        </div>
        <button style="margin-top: 3rem" type="submit" class="btn btn-primary">Update</button>
    </form>
</div>