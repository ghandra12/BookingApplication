@model BookingApplication.Models.Restaurant
@{
    ViewData["Title"] = "AddRestaurant";
}

<div class="container w-50 text-center">
    <h1 class="display-4">Add Restaurant</h1>
    <form style="margin-top: 8rem" asp-action="AddRestaurant" method="post">
        <div class="form-group">
            <label for="RestaurantName">Restaurant Name</label>
            <input class="form-control" type="text" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="RestaurantImage">Image Path</label>
            <input class="form-control" type="text" asp-for="ImgPath">
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>

